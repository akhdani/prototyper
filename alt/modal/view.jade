div(class="modal {{ modal.type }}", style="{{ modal.style }}", data-ng-show="modal.isshow")
    div(class="modal-header")
        button(type="button", class="close", data-dismiss="modal", aria-hidden="true", data-ng-click="modal.close()") &times;
        h4 {{ modal.header }}
    div(class="modal-body", data-ng-transclude)
    div(class="modal-footer")
        div(data-alt-button="btn", data-ng-repeat="btn in modal.buttons")

div(class="modal-backdrop fade in", data-ng-show="modal.isshow", data-ng-click="modal.close()")